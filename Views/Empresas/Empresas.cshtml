
@model IEnumerable<demomvc.Models.Empresa>
@{
    ViewData["Title"] = "Index";
}

<h2>Empresas</h2>

<center>
<a class="btn btn-primary" href="BuscarEmpresa" >BUSCAR UNA EMPRESA</a>
<a class="btn btn-primary" href="CrearEmpresa">CREAR EMPRESA</a>
<a class="btn btn-primary" href="Empresas">VER EMPRESA</a>
</center>



<form asp-controller="Empresas" asp-action="Empresas">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Empresas" asp-route-id="@item.ID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>