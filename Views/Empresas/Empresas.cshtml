
@model IEnumerable<demomvc.Models.Empresa>
@{
    ViewData["Title"] = "Index";
}

<h2>Empresas</h2>

<center>

<a class="btn btn-primary" href="CrearEmpresa">CREAR EMPRESA</a>
<a class="btn btn-primary" href="Empresas">VER EMPRESA</a>
</center>


<form asp-controller="Empresas" asp-action="Empresas">
    Tipo:<input type="text" name="fTipo">
        <input class="btn btn-success" type="submit" value="Filtrar" />
        <br>
    <a class="btn btn-danger" href="Empresas">Desfiltrar</a>
</form>
        <br><br>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>PAGINA</th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <form asp-controller="Empresas" asp-action="Empresa">
                    
                    <input name="item.Nombre" class="btn btn-success" type="submit" value="Ir" />
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
